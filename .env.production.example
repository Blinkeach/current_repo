# Production Environment Configuration for blinkeach.in
NODE_ENV=production

# Database (Auto-configured by Render)
DATABASE_URL=postgresql://user:password@host:port/database

# Domain Configuration
DOMAIN_URL=https://blinkeach.in
ALLOWED_ORIGINS=https://blinkeach.in,https://www.blinkeach.in,https://blinkeach.com,https://www.blinkeach.com

# Security (Auto-generated by Render)
JWT_SECRET=auto_generated_jwt_secret
SESSION_SECRET=auto_generated_session_secret

# Payment Integration (REQUIRED - Get from Razorpay Dashboard)
RAZORPAY_KEY_ID=rzp_live_YOUR_LIVE_KEY_HERE
RAZORPAY_KEY_SECRET=YOUR_LIVE_SECRET_HERE

# Email Service (REQUIRED for order confirmations)
SENDGRID_API_KEY=SG.YOUR_SENDGRID_API_KEY_HERE

# Gmail Backup Email (Optional)
GMAIL_USER=your_business_email@gmail.com
GMAIL_APP_PASSWORD=your_16_character_app_password

# Google OAuth (Optional - for social login)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Facebook OAuth (Optional - for social login)
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Delivery Service API (Optional)
DELHIVERY_API_KEY=your_delhivery_api_key
DELIVERY_PARTNER=delhivery

# AI Chatbot (Optional)
OPENAI_API_KEY=sk-your_openai_api_key_here

# Set to production for Render deployment
REPLIT=false